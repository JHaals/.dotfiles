alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias app_low corner bottom-right resize:screenSizeX/3;screenSizeY/3
alias app_high corner top-right resize:screenSizeX/3;screenSizeY/3
alias app_middle ${sox}+(2*${tssx});${soy}+${tssy} ${tssx};${tssy}
alias app_test ${sox}+(2*${tssx});${soy}+${tssy} ${tssx};${tssy}

bind 1:ctrl;alt ${topleft}
bind 2:ctrl;alt ${topright}
bind 3:ctrl;alt ${bottomleft}
bind 4:ctrl;alt ${bottomright}
bind 5:ctrl;alt ${app_high}
bind 6:ctrl;alt move ${app_middle}
bind 7:ctrl;alt ${app_low}

#bind 2:ctrl;alt push bottom bar-resize:screenSizeY/2
bind w:ctrl;alt ${lefthalf}
bind q:ctrl;alt ${full}
bind e:ctrl;alt ${righthalf}

layout mon-thunderbolt 'iTerm':REPEAT ${lefthalf}
layout mon-thunderbolt 'Google Chrome':REPEAT ${righthalf}
layout mon-laptop 'Spotify':Repeat ${full}

#Bind to "quick layout"
#bind l:alt layout mon-thunderbolt
bind s:ctrl;alt;cmd toggle 'Spotify'
bind 1:ctrl;alt;cmd chain focus '1Password' | ${app_low}

# Throw Bindings
bind w:ctrl;alt;cmd     throw 0 resize
bind e:ctrl;alt;cmd     throw 1 resize

# Focus Bindings
bind h:ctrl;alt     focus left
bind k:ctrl;alt     focus up
bind j:ctrl;alt     focus down

# Window Hints
bind s:ctrl;alt hint
bind a:ctrl;alt grid padding:5 0:6,2 1:9,9
bind r:ctrl;alt relaunch
bind l:ctrl;alt shell /System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine
